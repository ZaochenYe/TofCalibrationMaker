<?xml version="1.0" encoding="UTF-8"?>

<!-- A root node is required -->
<!--  It can be anything <root></root>, it just has to exist -->
<config>
	<job>calibrateTof</job>

	<Logger>
		<logLevel>info</logLevel>
	</Logger>

	<output>
		<data>dTof.root</data>
	</output>

	<Reporter>
		<output url="rpTof.pdf"/>
	</Reporter>

	<TofCalibration splitMode="cell" nIterations="1" >
		

		<Trays min="2" max="2" />
		<Modules min="20" max="25" />
		<Cells min="1" max="6" />

		<Bins>
			<tot variable="false" width="0.5" min="0" max="30"/>
			<z width="0.5" min="-3" max="3"/>
		</Bins>

		<Import>
			<TotParams url="tot_4DB.dat" />
		</Import>

	</TofCalibration>

	<histograms>
		

		<Histo name="traysHit" title="Trays Hit" xBins="b.trays" />
		<Histo name="modulesHit" title="modules Hit" xBins="b.modules" />
		<Histo name="cellsHit" title="cells Hit" xBins="b.cells" />
		<Histo name="iBeta" title="invBeta" xBins="b.p" yBins="b.iBeta" />
		<Histo name="dtVsZ" title="dt vs. Z" xBins="b.z" yBins="b.dt" />
		<Histo name="dt" title="dt" xBins="b.dt" />
		<Histo name="dtVsTot" title="dt" xBins="b.tot" yBins="b.dt" />
		<Histo name="t0Tray" title="t0 vs. Tray" xBins="b.trays" yBins="b.dt" />

	</histograms>
	<!-- /Users/danielbrandenburg/bnl/local/data/Run14/AuAu200/ -->
	<!-- url="/Users/danielbrandenburg/bnl/local/work/tofCalibration/bin/out/" -->
	<DataSource treeName="tof" url="/Users/danielbrandenburg/bnl/local/data/Run14/AuAu200/slew/split/" >
		<EvaluatedLeaf name="vR" value="TMath::Sqrt( [0]*[0] + [1]*[1] )" p0="vertexX" p1="vertexY" />
	</DataSource>
	
	<b>
		<trays width="1.0" min="0.5" max="120.5" />
		<modules width="1.0" min="0.5" max="32.5" />
		<cells width="1.0" min="0.5" max="6.5" />
		<p width="0.05" min="0" max="1.1" />
		<iBeta width="0.05" min="-5" max="5.0" />
		<dtWide width="1" min="-250" max="250" />
		<dt width=".01" min="-2.50" max="2.50" />
		<z width="0.1" min="-3.0" max="3.0" />
		<tot width=".5" min="10" max="30" />


	</b>



</config>
